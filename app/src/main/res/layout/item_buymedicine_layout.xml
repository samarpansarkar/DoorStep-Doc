<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/white_backgroud"
    android:layout_marginTop="16dp"
    app:circularflow_radiusInDP="10dp"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_medication_liquid_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/MedicineNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="MedcineName"
                android:textSize="25sp"
                android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/MedicinePriceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medicine Price"
                    android:textAppearance="?attr/textAppearanceListItem" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MFD: "
                    android:textAppearance="?attr/textAppearanceListItem" />


                <TextView
                    android:id="@+id/MedicineMFDTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10/10/10"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EXP: "
                    android:textAppearance="?attr/textAppearanceListItem" />


                <TextView
                    android:id="@+id/MedicineEXPTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10/10/10"
                    android:textAppearance="?attr/textAppearanceListItem" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>