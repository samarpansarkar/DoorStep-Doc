<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/back1"
    tools:context=".BookAppointmentActivity">

    <include
        layout="@layout/appbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Doctor"
        android:padding="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"/>

    <EditText
        android:id="@+id/searchEditTextAppoint"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Search by specialization"
        android:padding="5dp"
        android:drawableLeft="@drawable/baseline_search_24"
        android:drawablePadding="2dp"

        android:background="@drawable/white_backgroud"
        android:textColorHint="@color/white"
        android:layout_gravity="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/AppointRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>