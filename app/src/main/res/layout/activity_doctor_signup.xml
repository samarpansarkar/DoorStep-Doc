<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorSignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/white_backgroud"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOCTOR SIGNUP"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/lavender"/>

        <EditText
            android:id="@+id/doc_register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/white_backgroud"
            android:drawableLeft="@drawable/baseline_person_24"
            android:hint="Name"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/doc_register_specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/white_backgroud"
            android:drawableLeft="@drawable/baseline_person_24"
            android:hint="Specialization"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/doc_register_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:minHeight="48dp"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/white_backgroud"
            android:drawableLeft="@drawable/baseline_local_phone_24"
            android:inputType="phone" />

        <EditText
            android:id="@+id/doc_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/white_backgroud"
            android:drawableLeft="@drawable/baseline_email_24"
            android:hint="Email"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/doc_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/white_backgroud"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:hint="Password"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/doc_register_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="SignUp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/color_background"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/doc_login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/already_have_an_account_login"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/lavender"/>

    </LinearLayout>

</LinearLayout>