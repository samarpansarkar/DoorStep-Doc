<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_backgroud"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    app:circularflow_radiusInDP="10dp"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_local_hospital_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/AppointNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Samarpan Sarkar"
                android:textSize="25sp"
                android:textAppearance="?attr/textAppearanceListItem" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call:     "
                    android:textStyle="bold"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/AppointPhoneNumberTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1234567890"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/AppointSpecializationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SPECIALIZATION"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:layout_marginLeft="130dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fees:"
                    android:textStyle="bold"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/AppointFeesTextView"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textStyle="bold"
                    android:textAppearance="?attr/textAppearanceListItem" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>