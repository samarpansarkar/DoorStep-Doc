<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".BookAppointmentActivity2">

    <LinearLayout
        android:id="@+id/book_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APPOINTMENT BOOK"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/white_backgroud"
            android:drawableLeft="@drawable/baseline_person_24"
            android:hint="Doctor Name"
            android:textColorHint="@color/white"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/doctor_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Doctor Phone Number"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:minHeight="48dp"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/white_backgroud"
            android:drawableLeft="@drawable/baseline_local_phone_24"
            android:inputType="phone" />

        <EditText
            android:id="@+id/doctor_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/white_backgroud"
            android:drawableLeft="@drawable/baseline_email_24"
            android:hint="Email"
            android:textColorHint="@color/white"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/doctor_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/white_backgroud"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:hint="Doctor Address"
            android:textColorHint="@color/white"
            android:minHeight="48dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT DATE"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"/>

           <EditText
               android:id="@+id/dateEditText"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:hint="dd/mm/yyyy"
               android:textColorHint="@color/white"
               android:padding="7dp"
               android:background="@drawable/white_backgroud"
               android:layout_marginLeft="70dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT TIME"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/timeEditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="hh/mm"
                android:textColorHint="@color/white"
                android:padding="7dp"
                android:background="@drawable/white_backgroud"
                android:layout_marginLeft="100dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/book_appointment_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="BOOK APPOINTMENT"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:background="@drawable/color_background"
            android:layout_marginTop="10dp"/>


    </LinearLayout>
    <Button
        android:layout_below="@id/book_ll"
        android:id="@+id/book_back_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:hint="back"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColorHint="@color/white"
        android:background="@drawable/color_background"
        android:layout_marginTop="10dp"/>

</LinearLayout>