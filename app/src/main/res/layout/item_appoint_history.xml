<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/white_backgroud"
    android:orientation="vertical"
    android:layout_marginTop="10sp"
    android:padding="1dp">
        <TextView
            android:id="@+id/nameHisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="@drawable/item_background"
            android:padding="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/numberHisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="number"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/item_background"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emailHisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/item_background"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/useridHisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="userID"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/item_background"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dateHisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="date"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/item_background"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/timeHisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="time"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/item_background"
            android:textSize="16sp" />
</LinearLayout>