<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/back1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hey,"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login Now."
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="If you are new       "
                android:textSize="17sp"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/med_signup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="/Create now"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <EditText
            android:id="@+id/med_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/white_backgroud"
            android:drawableLeft="@drawable/baseline_email_24"
            android:hint="Email"
            android:textColorHint="@color/white"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/med_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/white_backgroud"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/med_login_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="LogIn"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/color_background"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</LinearLayout>